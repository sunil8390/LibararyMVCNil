    @model LibararyMVCNil.ViewModel.BooksViewModel

    @{
        Layout = null;
    }

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>SearchBook1</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <style>
            .main {
                margin: 20px;
                border: 2px solid black;
                padding: 14px;
            }


            .main_sub {
                margin-right: 40px;
            }

            h1 {
                background-color: #F5F5DC;
                padding: 10px;
                text-align: center;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                font-weight: 600;
            }
        </style>
    </head>
    <body>
       
            <div class="col-lg-12"><h1> Search library Booksss</h1> </div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        @using (Html.BeginForm("SearchBook1", "Books", FormMethod.Post))
                        {

                        <form class="main">
                            <br />
                            <div class="main_sub">
                                <label>Book Name</label>
                                @Html.TextBoxFor(model => model.BookName, new {  @class = "form-control" })

                            </div>
                            <div class="main_sub">
                                <label>Category Type</label>
                                @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.categorylist, "CategoryId", "CategoryName"), "Select Category", new { @class = "form-control" })
                            </div>
                            <div class="main_sub">
                                <label>Publihser Name</label>
                                @Html.DropDownListFor(model => model.PublisherId, new SelectList(Model.publisherlist, "PublisherId", "PublisherName"), "Select Publisher", new { @class = "form-control" })
                            </div> <br />
                            @*<button type="submit" class="btn btn-outline-success">Search</button>
        <button type="reset" class="btn btn-outline-info">Reset</button>*@

                            @*<input type="submit" value="Search" name="search" class="btn btn-outline-success"/>
        <input type="submit" value="Reset" name="reset" class="btn btn-outline-info"  />*@


                            @*@Html.TextBox("Searching")*@
                            <input type="submit" name="name" value="Search" class="btn btn-outline-success" />

                            <input type="reset" value="Reset" class="btn btn-outline-info" id="btnClear" />
                        </form>
                        }


                        </div>
                    <div class="col-12">

                       
                            <table class="table table-hover">
                                <tr>
                                    <th>Book Name</th>
                                    <th>Category Name </th>
                                    <th>Publisher Name </th>
                                </tr>

                                @foreach (var a in Model.booklist)
                                {

                                    <tr>
                                        <td>@Html.DisplayFor(modelitem => a.BookName) </td>
                                        <td>@Html.DisplayFor(modelitem => a.CategoryName) </td>
                                        <td>@Html.DisplayFor(modelitem => a.PublisherName) </td>
                                    </tr>



                                }

                               



                            </table>

                        
                    </div>
                </div>
            </div>
       
    </body>
</html>
